                            </Path>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>

    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout
                x:Name="SettingsFlyout"
                Width="275"
                AnimateOpacity="True"
                Header="{l:Static properties:Resources.SettingsHeader}"
                IsAutoCloseEnabled="False"
                Opacity="0.90"
                Position="Left"
                Theme="Adapt">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <mah:MetroAnimatedTabControl
                                mah:TabControlHelper.Transition="LeftReplace"
                                mah:TabControlHelper.UnderlinePlacement="Right"
                                mah:TabControlHelper.Underlined="TabPanel"
                                TabStripMargin="0 0 10 0"
                                TabStripPlacement="Left">
                                <mah:MetroTabItem Header="{l:Static properties:Resources.SettingsGeneralTabHeader}">
                                    <Viewbox Margin="0,0,10,0">
                                        <StackPanel Orientation="Vertical">
                                            <mah:MetroHeader Header="{l:Static properties:Resources.SettingsGeneralTabLanguageHeader}">

                                                <ComboBox
                                                    MinWidth="100"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    ItemsSource="{Binding Path=(localization:Translator.Cultures)}"
                                                    SelectedItem="{Binding Path=(localization:Translator.Culture)}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type globalization:CultureInfo}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Image
                                                                    Grid.Column="0"
                                                                    Height="12"
                                                                    VerticalAlignment="Center"
                                                                    Source="{Binding Converter={x:Static l:CultureToFlagPathConverter.Default}}"
                                                                    Stretch="Fill" />

                                                                <TextBlock
                                                                    Grid.Column="1"
                                                                    Margin="10,0,0,0"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Text="{Binding NativeName}" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                            </mah:MetroHeader>

                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsGeneralTabAlwaysCopyGameCode}"
                                                IsOn="{Binding Settings.AlwaysCopyGameCode, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}" />
                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsGeneralTabNoEndJudgmentByExile}"
                                                IsOn="{Binding Settings.NoEndJudgmentByExile, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}" />
                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsGeneralTabStartupMemes}"
                                                IsOn="{Binding Settings.startupMemes, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}" />
                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsGeneralTabFocusOnConnect}"
                                                IsOn="{Binding Settings.FocusOnToken, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}" />
                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsGeneralTabAPIServer}"
                                                IsOn="{Binding Settings.ApiServer, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}"
                                                Toggled="APIServerToggleSwitch_Toggled" />
                                            <mah:ToggleSwitch
                                                x:Name="AlwaysOnTopSwitch"
                                                Header="{l:Static properties:Resources.SettingsGeneralTabAlwaysOnTop}"
                                                IsOn="{Binding Settings.alwaysOnTop, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}"
                                                Toggled="AlwaysOnTopSwitch_OnToggled" />
                                        </StackPanel>
                                    </Viewbox>
                                </mah:MetroTabItem>
                                <mah:MetroTabItem x:Name="DebugTab" Header="{l:Static properties:Resources.SettingsDebugTabHeader}">
                                    <Grid Margin="0,10,10,0">
                                        <StackPanel Orientation="Vertical">
                                            <mah:ToggleSwitch
                                                Header="{l:Static properties:Resources.SettingsDebugTabDebugModeSwitch}"
                                                IsOn="{Binding Settings.debug, Mode=TwoWay}"
                                                OffContent="{l:Static properties:Resources.OffText}"
                                                OnContent="{l:Static properties:Resources.OnText}" />
                                            <Button
                                                x:Name="OpenLogsFolderButton"
                                                Margin="0,10,10,0"
                                                Background="#FFC107"
                                                Click="OpenLogsFolderButton_OnClick"
                                                Content="{l:Static properties:Resources.SettingsDebugOpenLogsFolderButton}"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
                                            <Button
                                                x:Name="ReloadOffsetsButton"
                                                Margin="0,10,10,0"
                                                Click="ReloadOffsetsButton_OnClick"
                                                Content="{l:Static properties:Resources.SettingsDebugTabReloadOffsetsButton}"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
                                            <Button
                                                Margin="0,10,10,0"
                                                Background="#FFDC3545"
                                                Click="ResetConfigButton_OnClick"
                                                Content="{l:Static properties:Resources.SettingsDebugTabResetConfigButton}"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />

                                        </StackPanel>
                                    </Grid>
                                </mah:MetroTabItem>
                                <mah:MetroTabItem x:Name="DiscordTokenTab" Header="{l:Static properties:Resources.SettingsDiscordTabHeader}">
                                    <Grid Margin="0,10,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" MinHeight="20" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <PasswordBox
                                            x:Name="discordTokenBox"
                                            Grid.Row="1"
                                            Margin="0,5,5,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            mah:ControlsHelper.FocusBorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                            mah:TextBoxHelper.ButtonCommand="{Binding TextBoxButtonHelpCmd, Mode=OneWay}"
                                            mah:TextBoxHelper.ButtonsAlignment="Right"
                                            mah:TextBoxHelper.SelectAllOnFocus="True"
                                            mah:TextBoxHelper.Watermark="{l:Static properties:Resources.SettingsDiscordTabTokenWatermark}"
                                            Style="{DynamicResource MahApps.Styles.PasswordBox.Button}">
                                            <mah:TextBoxHelper.ButtonContent>
                                                <Path
                                                    Width="22"
                                                    Height="22"
                                                    Fill="{DynamicResource MahApps.Brushes.Text}"
                                                    StrokeThickness="1">
                                                    <Path.Data>
                                                        <PathGeometry>
                                                            M15.33252,9.5A3.5001,3.5001,0,0,0,8.80127,7.75a1.00016,1.00016,0,0,0,1.73242,1A1.50266,1.50266,0,0,1,11.83252,8a1.5,1.5,0,1,1,0,3h-.00244a.94984.94984,0,0,0-.18927.0387,1.03181,1.03181,0,0,0-.19861.04065.98275.98275,0,0,0-.15552.10485,1.00813,1.00813,0,0,0-.162.10975,1.00464,1.00464,0,0,0-.11706.1737.97789.97789,0,0,0-.09668.14417,1.02252,1.02252,0,0,0-.04285.21191A.94847.94847,0,0,0,10.83252,12v1l.00232.01135.0011.49109a1.00016,1.00016,0,0,0,1,.99756h.00244a1.00006,1.00006,0,0,0,.99756-1.00244l-.00153-.66138A3.49363,3.49363,0,0,0,15.33252,9.5Zm-4.20264,6.79A1,1,0,0,0,11.82959,18a1.036,1.036,0,0,0,.71045-.29,1.01517,1.01517,0,0,0,0-1.41992A1.03425,1.03425,0,0,0,11.12988,16.29Z
                                                        </PathGeometry>
                                                    </Path.Data>
                                                </Path>
                                            </mah:TextBoxHelper.ButtonContent>
                                        </PasswordBox>
                                        <StackPanel
                                            Grid.Row="3"
                                            MinHeight="85"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                            <Button
                                                x:Name="SubmitDiscordButton"
                                                Grid.Column="1"
                                                Margin="5,0,5,0"
                                                HorizontalAlignment="Center"
                                                Click="SubmitDiscordButton_OnClick"
                                                Content="{l:Static properties:Resources.SettingsDiscordTabSubmitButton}"
                                                IsDefault="True"
                                                Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}" />
                                        </StackPanel>
                                    </Grid>
                                </mah:MetroTabItem>
                                <mah:MetroTabItem Header="{l:Static properties:Resources.SettingsAboutTabHeader}">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Orientation="Vertical">
                                            <mah:MetroHeader Header="{l:Static properties:Resources.SettingsAboutTabAutoUpdaterHeader}">
                                                <CheckBox IsChecked="{Binding AutoUpdaterEnabled, Mode=OneWay}" IsEnabled="False" />
                                            </mah:MetroHeader>
                                            <mah:MetroHeader Header="{l:Static properties:Resources.SettingsAboutTabAppVersion}">
                                                <TextBox
                                                    MinWidth="150"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding Version, Mode=OneWay}" />
                                            </mah:MetroHeader>
                                            <mah:MetroHeader Header="{l:Static properties:Resources.SettingsAboutTabLatestVersion}">
                                                <TextBox
                                                    MinWidth="150"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding LatestVersion, Mode=OneWay}" />
                                            </mah:MetroHeader>
                                            <mah:MetroHeader Header="{l:Static properties:Resources.SettingsAboutTabContributorsButton}">
                                                <Button Click="ContributorsButton_OnClick" ToolTip="{l:Static properties:Resources.SettingsAboutTabContributorsButtonToolTip}">
                                                    <Button.ContentTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">

                                                                <StackPanel Orientation="Horizontal">
                                                                    <Path
                                                                        Width="22"
                                                                        Height="22"
                                                                        Fill="Red"
                                                                        StrokeThickness="1">
                                                                        <Path.Data>
                                                                            <PathGeometry>
                                                                                M 52.2716,27.8072C 48.9356,24.164 42.0671,25.7204 38.0992,31.3618C 33.0737,25.3024 27.0713,24.164 23.7257,27.8072C 14.4142,37.9485 34.3451,52.5246 37.9599,54.1634L 38.0438,54.2109L 38.0438,54.1634C 41.6554,52.5246 61.5832,37.9485 52.2716,27.8072 Z
                                                                            </PathGeometry>
                                                                        </Path.Data>
                                                                    </Path>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </Button.ContentTemplate>
                                                </Button>
                                            </mah:MetroHeader>

                                        </StackPanel>
                                    </ScrollViewer>
                                </mah:MetroTabItem>
                            </mah:MetroAnimatedTabControl>
                        </Grid>
                    </StackPanel>

                </ScrollViewer>



            </mah:Flyout>
            <mah:Flyout
                x:Name="ManualConnectionFlyout"
                Width="{Binding ActualWidth, ElementName=Window, Converter={dialogs:MathDivideConverter}, ConverterParameter=1.5}"
                AnimateOpacity="True"
                ExternalCloseButton="Left"
                Header="{l:Static properties:Resources.ManualConnectionHeader}"
                IsAutoCloseEnabled="False"
                Position="Left"
                Theme="Adapt">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="4,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="{l:Static properties:Resources.ManualConnectionHost}" />
                                <TextBox
                                    x:Name="Host"
                                    MinWidth="150"
                                    VerticalAlignment="Center"
                                    Text="{Binding Settings.host, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="4,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{l:Static properties:Resources.ManualConnectionCode}" />
                                <TextBox
                                    x:Name="Code"
                                    MinWidth="150"
                                    Text="{Binding Settings.connectCode, Mode=TwoWay}" />
                            </StackPanel>
                            <Button
                                x:Name="SubmitConnectButton"
                                Margin="20"
                                Click="SubmitConnectButton_OnClick"
                                Content="{l:Static properties:Resources.ManualConnectionSubmitButton}" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            Margin="30"
            VerticalAlignment="Center"
            IsEnabled="{Binding Connected, Converter={StaticResource BoolInverter}}"
            Orientation="Vertical">
            <Viewbox VerticalAlignment="Center">
                <hc:OutlineText
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="{DynamicResource MahApps.Brushes.Text}"
                    FontFamily="{StaticResource AUFont}"
                    FontSize="42"
                    Stroke="Black"
                    StrokePosition="Outside"
                    StrokeThickness="1.5"
                    Text="{l:Static properties:Resources.WaitingForAmongUs}"
                    Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverterInverted}}" />
            </Viewbox>
            <hc:LoadingCircle
                Margin="15"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                IsEnabled="{Binding Connected, Converter={StaticResource BoolInverter}}"
                IsRunning="{Binding Connected, Converter={StaticResource BoolInverter}}"
                Style="{StaticResource LoadingCircleLarge}"
                Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverterInverted}}" />

            <Button
                Margin="30"
                Padding="14"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding OpenAmongUsCMD, Mode=OneWay}"
                Style="{DynamicResource MahApps.Styles.Button.Circle}"
                Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverterInverted}}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Width="22"
                            Height="22"
                            VerticalAlignment="Center"
                            Fill="{DynamicResource MahApps.Brushes.Accent}"
                            StrokeThickness="1">
                            <Path.Data>
                                <PathGeometry>
                                    M22.60107,2.062a1.00088,1.00088,0,0,0-.71289-.71289A11.25224,11.25224,0,0,0,10.46924,4.97217L9.35431,6.296l-2.6048-.62848A2.77733,2.77733,0,0,0,3.36279,7.0249L1.1626,10.9248A.99989.99989,0,0,0,1.82422,12.394l3.07275.65869a13.41952,13.41952,0,0,0-.55517,2.43409,1.00031,1.00031,0,0,0,.28466.83642l3.1001,3.1001a.99941.99941,0,0,0,.707.293c.02881,0,.05762-.00147.08692-.00391a12.16892,12.16892,0,0,0,2.49157-.49l.64368,3.00318a1.0003,1.0003,0,0,0,1.46924.66162l3.90527-2.20264a3.03526,3.03526,0,0,0,1.375-3.30371l-.6687-2.759,1.23706-1.13751A11.20387,11.20387,0,0,0,22.60107,2.062ZM3.57227,10.72314,5.12842,7.96338a.82552.82552,0,0,1,1.06982-.37549l1.71741.4162-.65.77179A13.09523,13.09523,0,0,0,5.67633,11.174Zm12.47021,8.22217L13.32666,20.477l-.4295-2.00464a11.33992,11.33992,0,0,0,2.41339-1.61987l.74353-.68366.40344,1.66462A1.041,1.041,0,0,1,16.04248,18.94531ZM17.65674,11.98l-3.68457,3.38623a9.77348,9.77348,0,0,1-5.17041,2.3042l-2.4043-2.4043a10.932,10.932,0,0,1,2.40088-5.206l1.67834-1.99268a.9635.9635,0,0,0,.07813-.09277L11.98975,6.271a9.27757,9.27757,0,0,1,8.80957-3.12012A9.21808,9.21808,0,0,1,17.65674,11.98Zm-.923-6.16376a1.5,1.5,0,1,0,1.5,1.5A1.49992,1.49992,0,0,0,16.7337,5.81622Z
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </StackPanel>

                </Button.Content>
            </Button>
        </StackPanel>

        <StackPanel
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            VerticalAlignment="Center"
            IsEnabled="{Binding Connected}"
            Orientation="Vertical"
            Visibility="{Binding Connected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Viewbox Margin="15" VerticalAlignment="Center">
                <hc:OutlineText
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="{DynamicResource MahApps.Brushes.Text}"
                    FontFamily="{StaticResource AUFont}"
                    FontSize="42"
                    Stroke="Black"
                    StrokePosition="Outside"
                    StrokeThickness="1.5"
                    Text="{l:Static properties:Resources.WaitingForLobby}"
                    Visibility="{Binding GameState, Converter={StaticResource GameStateToVisabilityI}}" />
            </Viewbox>
            <hc:LoadingCircle
                Margin="15"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                Style="{StaticResource LoadingCircleLarge}"
                Visibility="{Binding GameState, Converter={StaticResource GameStateToVisabilityI}}" />
        </StackPanel>


        <ItemsControl
            Name="PlayersList"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Visibility="{Binding GameState, Converter={StaticResource GameStateToVisability}}">
            <ItemsControl.Resources>
                <CollectionViewSource x:Key="PlayersSorted" Source="{Binding Players}">
                    <CollectionViewSource.SortDescriptions>
                        <componentModel:SortDescription Direction="Ascending" PropertyName="Name" />
                    </CollectionViewSource.SortDescriptions>
                </CollectionViewSource>
            </ItemsControl.Resources>
            <ItemsControl.ItemsSource>
                <Binding Source="{StaticResource PlayersSorted}" />
            </ItemsControl.ItemsSource>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" MinHeight="50" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Viewbox
                            Grid.Row="0"
                            VerticalAlignment="Top"
                            Panel.ZIndex="2"
                            Stretch="Uniform"
                            StretchDirection="DownOnly"
                            Visibility="Visible">
                            <Viewbox.Resources>
                                <controls:BindingProxy x:Key="Proxy" Data="{DynamicResource MahApps.Brushes.Text}" />
                            </Viewbox.Resources>
                            <hc:OutlineText
                                Grid.RowSpan="2"
                                Margin="20"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="White"
                                FontSize="40"
                                FontStretch="Normal"
                                FontStyle="Normal"
                                FontWeight="Bold"
                                Opacity="1"
                                Stroke="Black"
                                StrokePosition="Outside"
                                StrokeThickness="3"
                                Text="{Binding Name}" />
                        </Viewbox>
                        <Viewbox Grid.RowSpan="2" VerticalAlignment="Bottom">
                            <controls:PlayerControl
                                AliveStatus="{Binding Alive}"
                                PlayerHatID="{Binding HatID}"
                                PlayerName="{Binding Name}"
                                PlayerPantsID="{Binding PantsID}"
                                PlayerPetID="{Binding PetID}"
                                Color="{Binding Color}" />

                        </Viewbox>
                    </Grid>


                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid
                        Margin="3"
                        hc:PanelElement.FluidMoveBehavior="{StaticResource BehaviorXY400}"
                        Columns="{Binding PlayerCols}"
                        IsItemsHost="True"
                        Rows="{Binding PlayerRows}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="{DynamicResource MahApps.Brushes.Gray.SemiTransparent}"
            Orientation="Vertical"
            Visibility="{Binding Connected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl
                Grid.Row="3"
                Grid.ColumnSpan="3"
                ItemsSource="{Binding ConnectionStatuses}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1,2,1,1">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                                <Image
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Stretch="None">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{StaticResource status-disconnected}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=Connected, Converter={StaticResource BoolToString}}" Value="True">
                                                    <Setter Property="Source" Value="{StaticResource status-connected}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>


                                <Label
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right"
                                    VerticalContentAlignment="Center">
                                    <Label.Content>
                                        <MultiBinding Converter="{StaticResource ConnectionStateTranslator}">
                                            <Binding Path="ConnectionName" />
                                            <l:CurrentCulture />
                                        </MultiBinding>
                                    </Label.Content>
                                </Label>

                            </StackPanel>

                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid IsItemsHost="True" Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Grid Visibility="{Binding Connected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="StatusBox"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    mah:TextBoxHelper.Watermark="State"
                    AllowDrop="False"
                    Background="{DynamicResource MahApps.Brushes.Transparent}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                    Focusable="False"
                    IsHitTestVisible="True"
                    IsManipulationEnabled="False"
                    IsReadOnly="True"
                    ToolTip="{l:Static properties:Resources.GameStateTooltip}">
                    <TextBox.Text>
                        <MultiBinding Converter="{StaticResource GameStateTranslator}">
                            <Binding Path="GameState" />
                            <l:CurrentCulture />
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>

                <TextBox
                    x:Name="GameCodeBox"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Stretch"
                    dialogs:TextBoxHelper.AutoWatermark="True"
                    dialogs:TextBoxHelper.WatermarkAlignment="Right"
                    mah:TextBoxHelper.ButtonCommand="{Binding TextBoxButtonCopyCmd, Mode=OneWay}"
                    mah:TextBoxHelper.Watermark="{l:Static properties:Resources.GameCodeWatermark}"
                    AllowDrop="False"
                    Background="{DynamicResource MahApps.Brushes.Transparent}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                    Focusable="False"
                    IsHitTestVisible="True"
                    IsManipulationEnabled="False"
                    Style="{DynamicResource MahApps.Styles.TextBox.Button}"
                    Text="{Binding GameCode}"
                    ToolTip="{l:Static properties:Resources.GameCodeTooltip}">
                    <mah:TextBoxHelper.ButtonContent>
                        <Path
                            Width="22"
                            Height="22"
                            Fill="{DynamicResource MahApps.Brushes.Text}"
                            StrokeThickness="1">
                            <Path.Data>
                                <PathGeometry>
                                    M16,20H8a3,3,0,0,1-3-3V7A1,1,0,0,0,3,7V17a5,5,0,0,0,5,5h8a1,1,0,0,0,0-2ZM21,8.94a1.31,1.31,0,0,0-.06-.27l0-.09a1.07,1.07,0,0,0-.19-.28h0l-6-6h0a1.07,1.07,0,0,0-.28-.19l-.09,0L14.06,2H10A3,3,0,0,0,7,5V15a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V9S21,9,21,8.94ZM15,5.41,17.59,8H16a1,1,0,0,1-1-1ZM19,15a1,1,0,0,1-1,1H10a1,1,0,0,1-1-1V5a1,1,0,0,1,1-1h3V7a3,3,0,0,0,3,3h3Z
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </mah:TextBoxHelper.ButtonContent>
                </TextBox>
                <TextBox
                    x:Name="MapBox"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    mah:TextBoxHelper.Watermark="{l:Static properties:Resources.MapWatermark}"
                    AllowDrop="False"
                    Background="{DynamicResource MahApps.Brushes.Transparent}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                    Focusable="False"
                    IsHitTestVisible="True"
                    IsManipulationEnabled="False"
                    IsReadOnly="True"
                    Text="{Binding GameMap, Converter={StaticResource EnumToStringConverter}}"
                    ToolTip="{l:Static properties:Resources.MapTooltip}" />
            </Grid>

        </StackPanel>

    </Grid>
</mah:MetroWindow>