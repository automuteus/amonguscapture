<mah:MetroWindow
    x:Class="AUCapture_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:amonguscapture="clr-namespace:AmongUsCapture;assembly=AmongUsCapture"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:controls="clr-namespace:AUCapture_WPF.Controls"
    xmlns:converters="clr-namespace:AUCapture_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:globalization="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:l="http://gu.se/Localization"
    xmlns:li="http://github.com/zeluisping/loadingIndicators/xaml/controls"
    xmlns:localization="clr-namespace:Gu.Localization;assembly=Gu.Localization"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Gu.Localization.Properties;assembly=Gu.Localization"
    xmlns:properties="clr-namespace:AUCapture_WPF.Properties"
    xmlns:wpf="clr-namespace:LoadingIndicators.WPF;assembly=LoadingIndicators.WPF"
    Name="Window"
    Title="{l:Static properties:Resources.Title}"
    Width="366"
    Height="544"
    MinWidth="366"
    MinHeight="544"
    dialogs:DialogParticipation.Register="{Binding}"
    ContentRendered="MainWindow_OnContentRendered"
    Loaded="MetroWindow_Loaded"
    ResizeMode="CanResize"
    SaveWindowPosition="false"
    ShowInTaskbar="True"
    ShowSystemMenu="False"
    ShowSystemMenuOnRightClick="False"
    Style="{DynamicResource MahApps.Styles.MetroWindow.Clean}"
    TitleAlignment="Center"
    TitleCharacterCasing="Normal"
    TryToBeFlickerFree="True"
    mc:Ignorable="d">
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/clean/Controls.xaml" />
                <!--  MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive!  -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <!--  Theme setting  -->
                <ResourceDictionary Source="Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:PlayerToImage x:Key="PlayerToImage" />
            <converters:ConnectionStateTranslator x:Key="ConnectionStateTranslator" />
            <converters:GameStateTranslator x:Key="GameStateTranslator" />
            <converters:BoolToString x:Key="BoolToString" />
            <converters:EnumToStringConverter x:Key="EnumToStringConverter" />
            <converters:VisabilityInverterConverter x:Key="VisabilityInverterConverter" />
            <converters:BoolToVisibilityConverterInverted x:Key="BoolToVisibilityConverterInverted" />
            <converters:BoolInverter x:Key="BoolInverter" />
            <converters:GameStateToVisability x:Key="GameStateToVisability" />
            <converters:GameStateToVisabilityI x:Key="GameStateToVisabilityI" />
            <BitmapImage x:Key="status-connected" UriSource="Resources/Misc/status-connected.png" />
            <BitmapImage x:Key="status-disconnected" UriSource="Resources/Misc/status-disconnected.png" />
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    <Window.Background>
        <Binding Path="BackgroundBrush" />
    </Window.Background>
    <Window.InputBindings>
        <KeyBinding
            Key="L"
            Command="{Binding OpenLogFolderCmd}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="R"
            Command="{Binding RestartCmd}"
            Modifiers="Ctrl" />
        <KeyBinding Key="F1" Command="{Binding CommandsCMD}" />
        <KeyBinding Key="F2" Command="{Binding CopyLatestLogCMD}" />
    </Window.InputBindings>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>

            <Button Click="Settings" ToolTip="{l:Static properties:Resources.SettingsTooltip}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Path
                                Width="22"
                                Height="22"
                                Fill="{DynamicResource MahApps.Brushes.Text}"
                                StrokeThickness="1">
                                <Path.Data>
                                    <PathGeometry>
