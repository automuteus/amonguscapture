<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>false</UseWindowsForms>
    <UseWPF>true</UseWPF>

    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Loading.ico" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="CaptureGUI\App.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="CaptureGUI\App.xaml">
      <SubType>Designer</SubType>
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Config.Net" Version="4.15.0" />
    <PackageReference Include="Config.Net.Json" Version="4.15.0" />
    <PackageReference Include="MahApps.Metro" Version="2.3.1" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="4.7.0" />
    <PackageReference Include="NamedPipeServerStream.NetFrameworkVersion" Version="1.0.5" />
    <PackageReference Include="Octokit" Version="0.48.0" />
    <PackageReference Include="SharedMemory" Version="2.2.3" />
    <PackageReference Include="SocketIOClient" Version="2.0.2.8" />
  </ItemGroup>

  <ItemGroup>
    <SplashScreen Include="Loading.ico" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="CaptureGUI\MainWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="GameInteraction\" />
    <Folder Include="Communication\" />
  </ItemGroup>
  <PropertyGroup>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <StartupObject>AmongUsCapture.CaptureGUI.App</StartupObject>
  </PropertyGroup>
</Project>